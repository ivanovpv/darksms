<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phoneRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:padding="7dp">
    <TextView
            android:id="@+id/phoneType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/light_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="24dp"
            />
    <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/phoneType"
            android:text="0123456789"/>
    <ImageButton
            android:id="@+id/callButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/dial"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            />
        <RelativeLayout
                android:id="@+id/buttonsLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/callButton"
                 >
            <ImageButton
                    android:id="@+id/messageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/send_button_selector"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="6dp"/>
            <CheckBox
                    android:id="@+id/alwaysProtect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_toLeftOf="@id/messageButton"
                    android:checked="false"
                    android:layout_margin="6dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/invite"
                    android:background="@drawable/send_invitation"
                    android:adjustViewBounds="true"
                    android:layout_toLeftOf="@id/alwaysProtect"
                    android:layout_margin="6dp"/>
        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dark_grey"
            android:layout_below="@id/buttonsLayout"
            />
</RelativeLayout>
