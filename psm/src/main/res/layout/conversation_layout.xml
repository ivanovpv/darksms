<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <LinearLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageButton
                android:id="@+id/hiddenConversationButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/exit"
                android:adjustViewBounds="false"
                android:onClick="hiddenConversationAction"
                android:layout_margin="10dp"
                />
        <RelativeLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >
            <ImageButton
                    android:id="@+id/callButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dial"
                    android:adjustViewBounds="false"
                    android:onClick="callAction"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    />
            <ru.ivanovpv.gorets.psm.view.InviteConversationButton_
                    android:id="@+id/inviteConversationButton"
                    android:background="@drawable/send_invitation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@id/callButton"
                    android:layout_margin="10dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/upperLine"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dark_grey"
            android:layout_below="@id/upperLayout"
            />
    <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
        <EditText
                android:id="@+id/editMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="2"
                android:maxLines="10"
                android:singleLine="false"
                android:hint="@string/enterMessage"
                android:gravity="top"
                android:textSize="18sp"
                android:layout_weight="1"
                android:windowSoftInputMode="stateAlwaysVisible"
                />
        <ImageButton
                android:id="@+id/sendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/send_button_selector"
                android:onClick="sendMessageAction"
                android:layout_marginRight="3dp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:layout_gravity="top|right"
                android:layout_weight="0"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/upperLayout"
            android:layout_above="@id/sendLayout"
            android:orientation="vertical"
            >
        <!--TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tests"
                /-->
        <ListView
                android:id="@+id/conversationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_above="@id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dark_grey"
            />
</RelativeLayout>